@model List<Product>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Product product in Model)
        {
            <tr class="product-row" product-id="@product.ProductId">
                <td>@product.Name</td>
                <td>@product.Quantity</td>
            </tr>
        }
    </tbody>
</table>
