@model List<Product>
@section title {
    <h3>Products</h3>
}
@section Scripts {
    <script>
        function ConfirmDelete() {
            return confirm("Are you sure you wanna delete this product?");
        }
    </script>
}
@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Category</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@(product.Category != null ? product.Category.Name : "Not defined")</td >
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td><a class="btn btn-link" asp-controller="products" asp-action="edit" asp-route-id=@product.ProductId>Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="products" asp-action="delete" asp-route-productId=@product.ProductId onclick="return ConfirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-primary" asp-controller="products" asp-action="add">Add</a>
